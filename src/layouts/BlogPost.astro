---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FloatingWhatsapp from '../components/FloatingWhatsapp.astro';

const { frontmatter } = Astro.props;
---

<Layout title={`${frontmatter.title} | PCFix Blog`} description={frontmatter.description}>
  <Header />
  <main class="blog-post-page">
    <article class="article-container">
      <header class="article-header">
        <span class="category">{frontmatter.category || 'Teknoloji'}</span>
        <h1 class="article-title">{frontmatter.title}</h1>
        <div class="meta">
          <span class="date">{new Date(frontmatter.pubDate).toLocaleDateString('tr-TR')}</span>
          <span class="author">Yazar: {frontmatter.author}</span>
        </div>
        {frontmatter.image && <img src={frontmatter.image} alt={frontmatter.title} class="featured-image" />}
      </header>
      
      <div class="article-content">
        <slot />
      </div>

      <div class="cta-box">
        <h3>Sorununuz mu var?</h3>
        <p>Makalede anlatılanlar karmaşık geldiyse veya risk almak istemiyorsanız, uzman ekibimiz 15 dakikada kapınızda!</p>
        <a href="/#contact" class="btn btn-primary">Hemen Servis Çağır</a>
      </div>
    </article>
  </main>
  <Footer />
  <FloatingWhatsapp />
</Layout>

<style>
  .blog-post-page {
    padding-top: 120px;
    padding-bottom: 60px;
    background: var(--color-bg-dark);
    min-height: 100vh;
  }

  .article-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .article-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .category {
    color: var(--color-primary);
    text-transform: uppercase;
    font-size: 0.85rem;
    font-weight: 700;
    letter-spacing: 0.1em;
    margin-bottom: 1rem;
    display: block;
  }

  .article-title {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .meta {
    color: var(--color-text-muted);
    font-size: 0.9rem;
    margin-bottom: 2rem;
  }

  .meta span + span::before {
    content: "•";
    margin: 0 10px;
    color: var(--color-primary);
  }

  .featured-image {
    width: 100%;
    height: auto;
    border-radius: var(--radius-md);
    margin-top: 2rem;
    border: 1px solid rgba(255,255,255,0.1);
  }

  .article-content {
    line-height: 1.8;
    color: #e0e0e0;
    font-size: 1.1rem;
  }

  /* Markdown styles override global */
  .article-content :global(h2) {
    font-size: 1.8rem;
    margin-top: 3rem;
    margin-bottom: 1rem;
    color: var(--color-text-main);
  }

  .article-content :global(h3) {
    font-size: 1.4rem;
    margin-top: 2rem;
    margin-bottom: 1rem;
    color: var(--color-primary);
  }

  .article-content :global(p) {
    margin-bottom: 1.5rem;
  }

  .article-content :global(ul), .article-content :global(ol) {
    margin-bottom: 1.5rem;
    padding-left: 2rem;
  }

  .article-content :global(li) {
    margin-bottom: 0.5rem;
  }

  .article-content :global(strong) {
    color: var(--color-primary);
  }

  .cta-box {
    margin-top: 4rem;
    background: linear-gradient(135deg, rgba(0, 255, 157, 0.1), rgba(112, 0, 255, 0.1));
    border: 1px solid var(--color-primary);
    padding: 2rem;
    border-radius: var(--radius-md);
    text-align: center;
  }

  .cta-box h3 {
    margin-bottom: 0.5rem;
  }

  .cta-box p {
    margin-bottom: 1.5rem;
    color: var(--color-text-muted);
  }

  @media (max-width: 768px) {
    .article-title {
      font-size: 1.8rem;
    }
  }
</style>
